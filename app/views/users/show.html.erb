<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <!-- gravatar_forというヘルパーメソッドでユーザー(user)の画像を表示、
      @userで表示しているビューのユーザー情報を表示 -->
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
